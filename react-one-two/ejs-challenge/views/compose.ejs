<%- include("partials/header") %>
<h1>Compose</h1>
<form method="POST" action="/compose">
    <div class="form-group">
        <label for="post-title">Title</label>
        <input id="post-title" class="form-control" type="text" name="title" autofocus>
    </div>
    <div class="form-group">
        <label for="post-text">Post</label>
        <textarea id="post-text" class="form-control" name="post" rows="5"></textarea>
    </div>
    
    <button type="submit" name="publish-btn" class="btn btn-primary">Publish</button>
</form>
<%- include("partials/footer") %>